<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" prefHeight="720.0" prefWidth="1280.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.grandshopauto.userChat">
    <TextArea fx:id="messageArea" prefHeight="600.0" prefWidth="1280.0" />
    <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
        <children>
         <Button mnemonicParsing="false" onAction="#back" text="back">
            <HBox.margin>
               <Insets right="50.0" />
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#deletChat" text="delete chat">
            <HBox.margin>
               <Insets right="50.0" />
            </HBox.margin>
         </Button>
            <TextField fx:id="messageInput" prefHeight="26.0" prefWidth="739.0">
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </TextField>
            <Button onAction="#sendMessage" text="Send">
                <HBox.margin>
                    <Insets right="50.0" />
                </HBox.margin>
            </Button>
        </children>
    </HBox>
</VBox>
